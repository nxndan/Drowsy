{
  "manifest_version": 3,
  "name": "Drowsy",
  "version": "1.0",
  "description": "Put tabs to sleep to save RAM â€” potato style.",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/potato16.png",
      "32": "icons/potato32.png"
    }
  },

  "icons": {
    "16": "icons/potato16.png",
    "32": "icons/potato32.png",
    "48": "icons/potato48.png",
    "128": "icons/potato128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
